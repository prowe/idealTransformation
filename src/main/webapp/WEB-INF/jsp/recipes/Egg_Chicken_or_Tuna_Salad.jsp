<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>

<div class="row">
	<div class="col-md-6">
		<div class="recipe-modal-img-container">
			<img src="${pageContext.request.contextPath}/recipes/Egg_Chicken_or_Tuna_Salad.jpg" />
		</div>
		<h4>Ingredients</h4>
		<ul class="ingredients">
			<li>4 ounces cubed chicken, canned tuna, or two hard-boiled eggs</li>
			<li>2 Tbsp chopped dill pickle</li>
			<li>4 Tbsp chopped onion</li>
			<li>1 cup chopped celery</li>
			<li>1 cup chopped cauliflower</li>
			<li>1 Tbsp Homemade or Walden Farms Mayo (or Buffalo Sauce for Buffalo Chicken Salad)</li>
			<li>Salt and pepper to taste</li>
		</ul>
	</div>
	<div class="col-md-6">
		<h4>Instructions</h4>
		<ol class="instructions">
			<li>Mix everything together</li>
		</ol>
	</div>
</div>