<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>

<div class="row">
	<div class="col-md-6">
		<div class="recipe-modal-img-container">
			<img src="${pageContext.request.contextPath}/recipes/Chicken_Tortilla_Soup.jpg" />
		</div>
		<h4>Ingredients</h4>
		<ul class="ingredients">
			<li>8 ounces cooked chicken
			<li>2 cups chicken or vegetable broth</li>
			<li>2 cups mushrooms</li>
			<li>2 cups celery</li>
			<li>Season to taste: salt, pepper, garlic, onion powder, bay leaf</li>
		</ul>
	</div>
	<div class="col-md-6">
		<h4>Instructions</h4>
		<ol class="instructions">
			<li>Add all ingredients to large soup pot and simmer on medium heat until soup is at a low simmer.</li>
			<li>Serve and enjoy!</li>
		</ol>
	</div>
</div>